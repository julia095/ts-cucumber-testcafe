{
    "extends": "tslint:recommended",
    "rules": {
        "align": [
            false,
            "parameters"
        ],
        "forin": false,
        "max-classes-per-file": false,
        "max-line-length": {
            "options": [
                120
            ]
        },
        "member-ordering": [
            true,
            {
                "order": [
                    "instance-field",
                    "static-field",
                    "constructor"                    
                ]
            }
        ],
        "new-parens": true,
        "no-arg": true,
        "no-bitwise": true,
        "no-conditional-assignment": true,
        "no-consecutive-blank-lines": false,
        "no-console": {
            "severity": "warning",
            "options": [
                "debug",
                "info",
                "log",
                "time",
                "timeEnd",
                "trace"
            ]
        },
        "no-shadowed-variable": [
            true,
            {
                "TestController": false
            }
        ],
        "ordered-imports": false,
        "no-var-requires": false,
        "quotemark": [
            true,
            "single",
            "avoid-escape",
            "avoid-template"
        ],
        "semicolon": [true, "always", "strict-bound-class-methods"]
    },
    "jsRules": {
        "max-line-length": {
            "options": [
                120
            ]
        }
    }
}